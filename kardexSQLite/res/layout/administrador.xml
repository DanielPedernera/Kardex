<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txtIdentificacionAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAdminDocente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="adicionarDocente"
        android:text="Administrar Docente"
        android:background="@drawable/boton"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAdminEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="adicionarEstudiante"
        android:text="Administrar Estudiante"
        android:background="@drawable/boton"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAdminPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="adicionarUsuario"
        android:text="Aministrar Personal"
        android:background="@drawable/boton"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAdminSemestre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="semestre"
        android:background="@drawable/boton"
        android:textColor="@color/white"
        android:text="Administrar Semestre" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton"
        android:onClick="listDocAuxMat"
        android:text="@string/listDocAuxMat"
        android:textColor="@color/white" />

</LinearLayout>